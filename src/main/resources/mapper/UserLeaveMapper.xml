<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lance.persistence.mapper.UserLeaveMapper" >
  <resultMap id="BaseResultMap" type="com.lance.persistence.model.UserLeavePO" >
    <result column="ID"             property="id"           jdbcType="INTEGER" />
    <result column="NAME"           property="name"         jdbcType="VARCHAR" />
    <result column="DAYS"           property="days"         jdbcType="VARCHAR" />
    <result column="TITLE"          property="title"        jdbcType="VARCHAR" />
    <result column="CONTENT"        property="content"      jdbcType="VARCHAR" />
    <result column="CREATE_TIME"    property="createTime"   jdbcType="TIMESTAMP" />
    <result column="STATUS"         property="status"       jdbcType="VARCHAR" />
  </resultMap>

  <sql id="Base_Column_List">
    ID, NAME, DAYS, TITLE, CONTENT, CREATE_TIME,STATUS
  </sql>

  <select id="selectUserLeaveByName" resultType="com.lance.persistence.model.UserLeavePO">
      SELECT
      ID, NAME, DAYS, TITLE, CONTENT, CREATE_TIME,STATUS
      FROM ACT_USER_LEAVE
      WHERE NAME = #{name,jdbcType=VARCHAR}
  </select>

  <delete id="deleteUserLeaveById" parameterType="int">
      DELETE FROM ACT_USER_LEAVE
      WHERE ID = #{id,jdbcType=INTEGER}
  </delete>

    <update id="update">
        UPDATE ACT_USER_LEAVE
      <set>
        <if test="name != null">
          NAME = #{name,jdbcType=VARCHAR}
        </if>
        <if test="days != null">
            DAYS = #{days,jdbcType=VARCHAR}
        </if>
        <if test="title != null">
            TITLE = #{title,jdbcType=VARCHAR}
        </if>
        <if test="content != null">
            CONTENT = #{content,jdbcType=VARCHAR}
        </if>
        <if test="status != null">
            STATUS = #{status,jdbcType=VARCHAR}
        </if>
      </set>
      WHERE
        ID = #{id,jdbcType=INTEGER}
    </update>

  <insert id="insert" parameterType="com.lance.persistence.model.UserLeavePO" >
    insert into ACT_USER_LEAVE
      (<include refid="Base_Column_List"/>)
    values (act_user_leave_id.nextval, #{name,jdbcType=VARCHAR}, #{days,jdbcType=VARCHAR},
      #{title,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR}, sysdate,
      #{status,jdbcType=VARCHAR})
  </insert>
</mapper>